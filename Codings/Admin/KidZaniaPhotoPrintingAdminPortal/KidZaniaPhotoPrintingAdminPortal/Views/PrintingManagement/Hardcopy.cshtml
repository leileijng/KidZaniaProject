                        location.reload();
                    }
                }
            }).show();
        }).fail(function (data, textStatus, jqXHR) {
            new noty({
                text: data.responseJSON.message,
                theme: 'bootstrapTheme',
                layout: 'center',
                timeout: 3000,
                type: 'error'
            }).show();
        });
    }

    function pause(lineItemId) {
        webformdata = { "status": "Paused" };
        $.ajax({
            type: 'PUT',
            url: `/api/hardcopys/${lineItemId}`,
            contentType: 'application/json',
            data: JSON.stringify(webformdata)
        }).done(function (data, textStatus, jqXHR) {
            console.log("Collected updated!");
            new noty({
                text: data.message,
                layout: 'center',
                theme: 'bootstrapTheme',
                type: 'success',
                timeout: 3000,
                callback: {
                    onClose: function () {
                        location.reload();
                    }
                }
            }).show();
        }).fail(function (data, textStatus, jqXHR) {
            new noty({
                text: data.responseJSON.message,
                theme: 'bootstrapTheme',
                layout: 'center',
                timeout: 3000,
                type: 'error'
            }).show();
        });
    }


    function loadTable() {
        $(`#myTable`).html("");
        $(`#completedOrders`).html("");
        $.ajax({
            type: "GET",
            url: "/api/hardcopys",
            dataType: "json",
            success: function (data) {
                var i;
                var orderNo;

                var $orderRow = null;
                var $photoRow = null;

                var collectedPhotoNumber = 0;
                var processingPhotoNumber = 0;
                
                
                for (i = 0; i < data.length; i++) {
                    collectedPhotoNumber++;
                    if (data[i].lineitem_status == "Collected") {
                        if (data[i].order_id != orderNo) {
                            orderNo = data[i].order_id;
                            var d = new Date(data[i].updated_time);
                            var hour = d.getHours(); 
                            var minutes = d.getMinutes(); 
                            var seconds = d.getSeconds();
                            if (hour.toString().length < 2)
                                hour = "0" + hour;
                            if (minutes.toString().length < 2)
                                minutes = "0" + minutes;
                            if (seconds.toString().length < 2)
                                seconds = "0" + seconds;

                            var updateTime = hour + ":" + minutes + ":" + seconds;
                            $orderRow = $(`<tr class="completedOrderRow"><td><i data-toggle="collapse" data-target=".collected${orderNo}" class="fa fa-chevron-right rotate" onclick="rotate(this)"></i></td>
                                <td>${updateTime}</td>
                                <td>${orderNo}</td>
                                <td>-</td>
                            </tr>`);
                            $(`#completedOrders`).append($orderRow);


                            $photoRow = $(`<tr class="collected${orderNo} collapse"><td></td><td colspan="3" id="collectedPhoto${orderNo}"><div class="m-r-10"><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></div>
                                    </td>
                                    <td></td>
                                </tr>`);
                            $(`#completedOrders`).append($photoRow);
                        }

                        else {
                            $(`#collectedPhoto${orderNo}`).append(`<div class="m-r-10"><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></div>`);
                        }
                    }
                }

                for (i = 0; i < data.length; i++) {
                    processingPhotoNumber++;
                    if (data[i].lineitem_status == "Completed") {
                        if (data[i].order_id != orderNo) {
                            orderNo = data[i].order_id;

                            $orderRow = $(`<tr class="orderRow completed"><td><i data-toggle="collapse" data-target=".completed${orderNo}" class="fa fa-chevron-right rotate" onclick="rotate(this)"></i></td>
                                    <td>${orderNo}</td><td><span class="badge badge-danger">Completed</span></td><td id="printer${orderNo}">-</td><td id="progress${orderNo}">${data[i].photo_qty}/${data[i].photo_qty}</td><td>-</td>
                                    <td><label class="custom-control custom-checkbox"><input type="checkbox" class="custom-control-input" onclick="collect('${data[i].lineItem_id}')"><span class="custom-control-label">Collect</span></label></td></tr>`);
                            $(`#myTable`).append($orderRow);


                            $photoRow = $(`<tr class="completed${orderNo} collapse colspan="7"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td></td></tr>`);
                            $(`#myTable`).append($photoRow);
                        }

                        else {
                            $photoRow = $(`<tr class="completed${orderNo} collapse colspan="7"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td></td></tr>`);
                            $(`#myTable`).append($photoRow);
                        }
                    }
                }

                for (i = 0; i < data.length; i++) {
                    processingPhotoNumber++;
                    if (data[i].lineitem_status == "Printing") {
                        if (data[i].order_id != orderNo) {
                            orderNo = data[i].order_id;

                            var x;
                            var numberOfPrinting = 0;
                            for (x = 0; x < data.length; x++) {
                                if (data[x].order_id == data[i].order_id) {
                                    if (data[x].photo_status == "Completed") {
                                        numberOfPrinting++;
                                    }
                                }
                            }

                            $orderRow = $(`<tr class="orderRow printing"><td><i data-toggle="collapse" data-target=".printing${orderNo}" class="fa fa-chevron-right rotate" onclick="rotate(this)"></i></td>
                        <td>${orderNo}</td><td><span class="badge badge-success">Printing</span></td><td id="printer${orderNo}">-</td><td id="progress${orderNo}">${numberOfPrinting}/${data[i].photo_qty}</td><td>-</td>
                        <td></td></tr>`);
                            $(`#myTable`).append($orderRow);

                            if (data[i].photo_status == "Completed") {
                                $photoRow = $(`<tr class="printing${orderNo} collapse colspan="7"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td></td></tr>`);
                                $(`#myTable`).append($photoRow);
                            }
                            if (data[i].photo_status == "Printing") {
                                $photoRow = $(`<tr class="printing${orderNo} collapse colspan="7"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td><label class="custom-control custom-checkbox"><input type="checkbox" class="custom-control-input" onclick="complete('${data[i].photo_id}')"><span class="custom-control-label">Complete</span></label></td></tr>`);
                                $(`#myTable`).append($photoRow);
                            }
                            if (data[i].photo_status == "Waiting") {
                                $photoRow = $(`<tr class="printing${orderNo} collapse colspan="7"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td><label class="custom-control custom-checkbox"><input type="checkbox" class="custom-control-input" onclick="printing('${data[i].photo_id}')"><span class="custom-control-label">Print</span></label></td></tr>`);
                                $(`#myTable`).append($photoRow);
                            }

                        }

                        else {
                            if (data[i].photo_status == "Completed") {
                                $photoRow = $(`<tr class="printing${orderNo} collapse colspan="7"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td></td></tr>`);
                                $(`#myTable`).append($photoRow);
                            }
                            if (data[i].photo_status == "Printing") {
                                $photoRow = $(`<tr class="printing${orderNo} collapse colspan="7"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td><label class="custom-control custom-checkbox"><input type="checkbox" class="custom-control-input"  onclick="complete('${data[i].photo_id}')"><span class="custom-control-label">Complete</span></label></td></tr>`);
                                $(`#myTable`).append($photoRow);
                            }
                            if (data[i].photo_status == "Waiting") {
                                $photoRow = $(`<tr class="printing${orderNo} collapse colspan="7"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td><label class="custom-control custom-checkbox"><input type="checkbox" class="custom-control-input" onclick="printing('${data[i].photo_id}')"><span class="custom-control-label">Print</span></label></td></tr>`);
                                $(`#myTable`).append($photoRow);
                            }
                        }
                    }
                }

                for (i = 0; i < data.length; i++) {
                    processingPhotoNumber++;
                    if (data[i].lineitem_status == "Waiting") {
                        if (data[i].order_id != orderNo) {
                            orderNo = data[i].order_id;
                            console.log(orderNo);
                            $orderRow = $(`<tr class="orderRow waiting"><td><i data-toggle="collapse" data-target=".waiting${orderNo}" class="fa fa-chevron-right rotate" onclick="rotate(this)"></i></td>
                        <td>${orderNo}</td><td><span class="badge badge-light">Waiting</span></td><td id="printer${orderNo}">-</td><td id="progress${orderNo}">0/${data[i].photo_qty}</td><td>-</td>
                        <td><label class="custom-control custom-checkbox"><input type="checkbox" class="custom-control-input" onclick="pause('${data[i].lineItem_id}')"><span class="custom-control-label">Pause</span></label></td></tr>`);
                            $(`#myTable`).append($orderRow);
                            $photoRow = $(`<tr class="waiting${orderNo} collapse"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td><label class="custom-control custom-checkbox"><input type="button" class="custom-control-input" onclick="printing('${data[i].photo_id}')"><span class="custom-control-label">Printing</span></label></td></tr>`);
                            $(`#myTable`).append($photoRow);
                        }
                        else {
                            $photoRow = $(`<tr class="waiting${orderNo} collapse"><td></td><td><img src="${data[i].photo_path}" alt="user" class="rounded" width="55"></td>
                                    <td>Status: ${data[i].photo_status}</td><td>-</td><td></td><td></td><td><label class="custom-control custom-checkbox"><input type="button" class="custom-control-input" onclick="printing('${data[i].photo_id}')"><span class="custom-control-label">Printing</span></label></td></tr>`);
                            $(`#myTable`).append($photoRow);
                        }
                    }
                }

                if (processingPhotoNumber == 0) {
                    $(`#myTable`).append($(`<tr class="noOrderFoundRow"><td colspan="7"> No order found.</td></tr>`));
                }
                if (collectedPhotoNumber == 0) {
                    $(`#completedOrders`).append($(`<tr class="noOrderFoundRow"><td colspan="3"> No order found.</td></tr>`));
                }
            },
            error: function (data) {
            }
        });
    }


    function toggleTable() {
        $("#myInput").val("");
        if ($('#profile-tab-justify').hasClass("active")) {
            currentTable = "processingOrders";
        }
        else if ($('#home-tab-justify').hasClass("active")) {
            currentTable = "completedOrders";
        }
        console.log("currentTable is" + currentTable);
    }


    function filterOrderByStatus(status) {
        var trList = $('#myTable .orderRow');
        $('#statusFilter').text(status);
        console.log(status);
        trList.each(function () {
            $(this).css("display", "");
            if (!$(this).hasClass(status)) {
                $(this).css("display", "none");
            }
        });
        $(".fa-chevron-right").attr("aria-expanded", "false");
        $(".fa-chevron-right").removeClass('down');
        $('.collapse').removeClass('show');
    }


    function searchFunction() {
        var input, filter, td, i;
        var input = $("#myInput").val();
        var filter = input.toUpperCase();
        var trList;
        if (currentTable == "processingOrders") {
            trList = $('#myTable .orderRow');
        }
        else if (currentTable == "completedOrders") {
            trList = $('#completedOrders .completedOrderRow');
        }




        //don't initiate search unless user types at least 3 characters. This will greatly improve performance and usability especially with large tables.
        if (filter.length >= 3) {
            $(".fa-chevron-right").attr("aria-expanded", "false");
            $(".fa-chevron-right").removeClass('down');
            $('.collapse').removeClass('show');
            var findOrder = false;
            for (i = 0; i < trList.length; i++) {
                var match = false;
                var tdList = trList[i].getElementsByTagName("td");
                //loop through every td
                for (j = 0; j < tdList.length; j++) {
                    var td = tdList[j];
                    if (td) {
                        if (td.innerText.toUpperCase().indexOf(filter) > -1) {
                            match = true;
                            findOrder = true;
                        }
                    }
                }
                if (match == true) {
                    trList[i].style.display = "";
                }
                else {
                    trList[i].style.display = "none";
                }
            }
            if (!findOrder) {
                $('.noOrderFoundRow').css("display", "");
            }
        }
        else {
            for (i = 0; i < trList.length; i++) {
                trList[i].style.display = "";
            }
            $('.noOrderFoundRow').css("display", "none");
        }
    }

    $(document).ready(function () {
        $('#menuHardcopy').addClass("active");
        // Fetch the initial table
        loadTable();

        // Fetch every 5 seconds
        setInterval(loadTable, 90000);
    });
</script>
