                        $(`#availablePrinters`).append($printerdiv);
                        AP = true;
                        printerAvailable = true;
                        $("#autoPrintingChk").css("display", "block");
                        $("#autoPrintingChk").removeAttr("disabled");
                    }
                    else {
                        NA = true;
                        $('#unavailableLoading').css("display", "none");
                        if (clientPrinters[i].error !== null) {

                            var $printerdiv = $(`<div class="row printer"><div class="column icon" style="color:red"><i class="fas fa-print" style="padding-right: 6px;"></i></div>
                        <div class="column middle"><p class="MP">${clientPrinters[i].printerName}</p> <p class="subInfo">${clientPrinters[i].error}</p></div>
                        <div class="column side"><button type="button" class="btn btn-primary">Resume</button></div></div>`);
                        }
                        else {
                            var $printerdiv = $(`<div class="row printer"><div class="column icon" style="color:red"><i class="fas fa-print" style="padding-right: 6px;"></i></div>
                        <div class="column middle"><p class="MP">${clientPrinters[i].printerName}</p> <p class="subInfo">Not Connected</p></div>
                        <div class="column side"><button type="button" class="btn btn-primary" style="display: none">Resume</button></div></div>`);
                        }

                        $(`#unavailablePrinters`).append($printerdiv);
                    }
                }
                if (!NA) {
                    $('#unavailableLoading').css("display", "none");
                    $(`#unavailablePrinters`).append($(`<div class="row printer">All Printers are available</div>`));
                }
                if (!AP) {
                    $("#autoPrintingChk").attr("disabled", true);
                    $('#availableLoading').css("display", "none");
                    $('#startAutoPrintingP').css("display", "none");
                    $(`#availablePrinters`).append($(`<div class="row printer">All Printers are not available</div>`));
                    if (autoPrintingOn) {
                        autoPrintingOn = false;
                        $("#startAutoPrintingP").css("display", "none");
                        alert("No printer is available. The auto printing system has been terminated!");
                    }
                }

            }
        });
    }

