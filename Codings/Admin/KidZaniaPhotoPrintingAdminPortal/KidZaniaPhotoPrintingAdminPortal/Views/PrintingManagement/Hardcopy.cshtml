<script src="~/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/noty/jquery.noty.js"></script>
<script src="~/Scripts/noty/layouts/center.js"></script>
<script src="~/Scripts/noty/themes/bootstrap.js"></script>
<script src="~/Scripts/noty/themes/default.js"></script>
<script src="~/Scripts/noty/themes/relax.js"></script>
<script type="text/javascript">
    var currentTable = "processingOrders";

    function rotate(el) {
        $(el).toggleClass("down");
    }

    function printing(photoId) {
        console.log(photoId);
        webformdata = { "status": "Printing", "photoId": photoId };
        $.ajax({
            type: 'PUT',
            url: `/api/hardcopys`,
            contentType: 'application/json',
            data: JSON.stringify(webformdata)
        }).done(function (data, textStatus, jqXHR) {
            console.log("Printing updated!");
            new noty({
                text: data.message,
                layout: 'center',
                theme: 'bootstrapTheme',
                type: 'success',
                timeout: 3000,
                callback: {
                    onClose: function () {
                        location.reload();
                    }
                }
            }).show();
        }).fail(function (data, textStatus, jqXHR) {
            new noty({
                text: data.responseJSON.message,
                theme: 'bootstrapTheme',
                layout: 'center',
                timeout: 3000,
                type: 'error'
            }).show();
        });
    }

    function complete(photoId) {
        webformdata = { "status": "Completed", "photoId": photoId };
        $.ajax({
            type: 'PUT',
            url: `/api/hardcopys`,
            contentType: 'application/json',
            data: JSON.stringify(webformdata)
        }).done(function (data, textStatus, jqXHR) {
            console.log("Completed updated!");
            new noty({
                text: data.message,
                layout: 'center',
                theme: 'bootstrapTheme',
                type: 'success',
                timeout: 3000,
                callback: {
                    onClose: function () {
                        location.reload();
                    }
                }
            }).show();
        }).fail(function (data, textStatus, jqXHR) {
            new noty({
                text: data.responseJSON.message,
                theme: 'bootstrapTheme',
                layout: 'center',
                timeout: 3000,
                type: 'error'
            }).show();
        });
    }

    function collect(lineItemId) {
        webformdata = { "status": "Collected" };
        $.ajax({
            type: 'PUT',
            url: `/api/hardcopys/${lineItemId}`,
            contentType: 'application/json',
            data: JSON.stringify(webformdata)
        }).done(function (data, textStatus, jqXHR) {
            console.log("Collected updated!");
            new noty({
                text: data.message,
                layout: 'center',
                theme: 'bootstrapTheme',
                type: 'success',
                timeout: 3000,
                callback: {
